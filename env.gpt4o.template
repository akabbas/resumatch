# GPT-4o Environment Configuration Template
# Copy this file to env.gpt4o and fill in your actual API keys

FLASK_ENV=production
FLASK_DEBUG=False
FLASK_PORT=8001
LOG_LEVEL=INFO

# Security
SECRET_KEY=your_secure_gpt4o_secret_key_here
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# OpenAI Configuration - GPT-4o
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Configuration - Claude-3-5-Sonnet
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Feature Flags - GPT-4o Features Enabled
ENABLE_GPT4O_FEATURES=True
ENABLE_ANALYTICS=True
ENABLE_MONITORING=True
ENABLE_INTELLIGENT_SKILL_MATCHING=True
ENABLE_JOB_TITLE_OPTIMIZATION=True
ENABLE_SUMMARY_OPTIMIZATION=True
ENABLE_BULLET_OPTIMIZATION=True
ENABLE_PAGE_OPTIMIZATION=True

# GPT-4o Enhanced Features
ENABLE_ADVANCED_CONTENT_GENERATION=True
ENABLE_INTELLIGENT_CAREER_ADVICE=True
ENABLE_ADVANCED_JOB_ANALYSIS=True
ENABLE_REAL_TIME_OPTIMIZATION=True

# Multi-Model AI Configuration
ENABLE_MULTI_MODEL_AI=True
ENABLE_CLAUDE_INTEGRATION=True

# Tiered Model Configuration (GPT-4o + Claude)
MODEL_TIER_FREE=gpt-4o
MODEL_TIER_PRO=gpt-4o
MODEL_TIER_PREMIUM=claude-3-5-sonnet
MODEL_TIER_ENTERPRISE=claude-3-5-sonnet

# AI Model Selection
ENABLE_MODEL_SELECTION=True
ENABLE_TIERED_PRICING=True
ENABLE_AUTO_MODEL_SELECTION=True

# File Upload Settings
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=txt,json

# Performance Settings
WORKERS=4
TIMEOUT=60
MAX_REQUESTS=500
MAX_REQUESTS_JITTER=25
